{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Golden Minutes",
  "mainBinaryName": "GoldenMinutes",
  "version": "0.3.0",
  "identifier": "com.ainotes.desktop",
  "build": {
    "frontendDist": "https://www.goldenminutes.co.uk/",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "echo 'Run web dev manually'",
    "beforeBuildCommand": "echo 'Run web build manually'"
  },
  "plugins": {
    "shell": {
      "open": false
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Golden Minutes",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "/"
      },
      {
        "label": "quick-note",
        "title": "Golden Minutes - Quick Note",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "/quick-note",
        "alwaysOnTop": true,
        "visible": false
      },
      {
        "label": "meeting-alert",
        "title": "Golden Minutes - Meeting Alert",
        "width": 460,
        "height": 92,
        "resizable": false,
        "fullscreen": false,
        "url": "/meeting-alert",
        "alwaysOnTop": true,
        "visible": false,
        "decorations": false,
        "skipTaskbar": true,
        "transparent": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/whisper"],
    "resources": ["models/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
