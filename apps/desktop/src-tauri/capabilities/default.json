{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main", "quick-note"],
  "permissions": [
    "core:default",
    "shell:allow-execute",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/whisper",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
