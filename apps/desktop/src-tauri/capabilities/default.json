{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main",
    "quick-note",
    "meeting-alert"
  ],
  "permissions": [
    "core:default",
    "shell:allow-execute",
    "shell:allow-open",
    "fs:default",
    "dialog:default",
    "fs:allow-write-file",
    "fs:allow-create",
    "fs:allow-home-write",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$DOWNLOAD/**",
        "$DOCUMENTS/**",
        "$DESKTOP/**"
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "whisper",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "notification:default"
  ]
}
